{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noEmitOnError": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "skipLibCheck": true,
        "incremental": true,
        "noEmit": true,
        "baseUrl": ".",
        "outDir": "dist",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "paths": {
            "-/*": [
                "src/*"
            ],
            "@/*": [
                "src/lib/*"
            ],
            "C/*": [
                "src/components/*"
            ],
            "S/*": [
                "src/style/*"
            ],
            "$/": [
                "data/*"
            ]
        }
    },
    "tsc-alias": {
        "transform": "js",
        "format": "ESNext"
    },
    "typeRoots": [
        "./src/types/",
        "node_modules/@types/jest"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}